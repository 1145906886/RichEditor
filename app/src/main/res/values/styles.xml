<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DirectoryStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DirectoryFirst" parent="DirectoryStyle" >
        <item name="android:textSize">22dp</item>
    </style>

    <style name="DirectorySecond" parent="DirectoryStyle" >
        <item name="android:textSize">18dp</item>
    </style>

    <style name="DirectoryThird" parent="DirectoryStyle" >
        <item name="android:textSize">14dp</item>
    </style>

    <style name="DirectoryFourth" parent="DirectoryStyle" >
        <item name="android:textSize">10dp</item>
    </style>

</resources>
